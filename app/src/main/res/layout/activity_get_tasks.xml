<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".employee.GetTasksActivity">


    <TextView
        android:id="@+id/edit_text_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press Below To Get Your Tasks"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_employee"
        android:background="@drawable/rounded_button_login"
        android:layout_below="@+id/edit_text_employee"
        android:layout_centerHorizontal="true"
        android:onClick="retrievePDF"
        android:layout_marginTop="20dp"
        android:text="Get Your Task File "/>



</RelativeLayout>